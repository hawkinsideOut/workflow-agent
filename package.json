{
  "name": "@workflow/agent-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A self-evolving workflow management system for AI agent development",
  "keywords": [
    "workflow",
    "agent",
    "validation",
    "git",
    "conventional-commits",
    "scopes",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkinsideOut/workflow-agent.git"
  },
  "license": "MIT",
  "author": "Workflow Agent Team",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter workflow-agent-cli run build && pnpm -r --filter '!workflow-agent-cli' run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r --if-present run typecheck",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel run dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublish": "pnpm build && pnpm test",
    "publish:core": "cd packages/core && npm publish --access public",
    "publish:tracker": "cd packages/improvement-tracker && npm publish --access public",
    "publish:presets": "pnpm -r --filter \"./packages/scopes-*\" exec npm publish --access public",
    "publish:all": "pnpm prepublish && pnpm publish:core && pnpm publish:tracker && pnpm publish:presets",
    "pack:vscode": "cd packages/vscode-extension && vsce package",
    "workflow:init": "workflow-agent init",
    "workflow:validate": "workflow-agent validate",
    "workflow:suggest": "workflow-agent suggest",
    "workflow:doctor": "workflow-agent doctor",
    "pre-commit": "./scripts/pre-commit-checks.sh",
    "verify": "workflow-agent verify",
    "verify:fix": "workflow-agent verify --fix --max-retries=10",
    "verify:dry": "workflow-agent verify --fix --dry-run",
    "verify:all": "pnpm typecheck && pnpm lint && pnpm format && pnpm test && pnpm build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.5",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
